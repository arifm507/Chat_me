<h2 class="ui center aligned large header">
  Welcome to Chatme App
</h2>
<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  You can Register yourself here
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:user, html: {class: "ui form", role: "form"}, url: register_path) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter password"%>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label "Confirm Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Re enter password"%>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Register", class: "ui orange submit button" %>
        <% end %>
      </div>
    
    <div class="middle aligned column">
        <%= link_to "<i class='ui left sign in icon'></i> Login".html_safe, login_path, class: "ui inverted orange big button" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>