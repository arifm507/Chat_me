<%= form_for(@user_detail, html: {class: "ui form", role: "form"}, url: user_path) do |f| %>


  <div class="field">
    <h2>You can edit your profile here</h2>
  </div>
  <div class="field">
      <label>Full Name</label>
      <%= f.text_field :name, placeholder: "Full Name" %>
  </div>
  <div class="field">
      <label>Email</label>
      <%= f.text_field :email, placeholder: "Email" %>
  </div>
  <div class="field">
      <label>Contact</label>
      <%= f.text_field :contact, placeholder: "Contact" %>
  </div>
  <div class="field">
    <label>Gender</label>
    <div class="ui fluid selection dropdown">
      <div class="text">Select</div>
      <i class="dropdown icon"></i>
      <%= f.hidden_field :gender%>
      <div class="menu">
        <div class="item" data-value="male">Male</div>
        <div class="item" data-value="female">Female</div>
      </div>
    </div>
  </div>
  <div class="field">
       <label>Date Of Birth</label>
      <div class="ui input left icon">
         <i class="calendar icon"></i>
        <%= f.date_field :dob, placeholder: "Date Of Birth" %>
      </div>
  </div>
  <div class="field">
      <label>Employee At</label>
      <%= f.text_field :company, placeholder: "Company Name" %>
  </div>
  <div class="field">
      <label>Address</label>
      <%= f.text_field :address, placeholder: "Address" %>
  </div>
  <div class="field">
    <label>About Youself</label>
    <%= f.text_area :about, rows: "4", placeholder: "About Yourself" %>
  </div>

  <%= f.submit "Save", class: "ui blue submit button" %>  


<% end %>